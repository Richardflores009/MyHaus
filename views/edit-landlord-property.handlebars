<!--MODALS FOR Updating Property-->

        <div class="modal fade" id="update-property" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Create New Property</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <!--form to enter new tenant-->
                    {{#each property as |property|}}
                    <div class="modal-body">
                        <form class="form-proper" action="">
                            <div class="left-form">
                                <input type="hidden" name="post-id" value="{{property.id}}" />
                                <input type="hidden" name="landlord-id" value="{{landlord.id}}" />
                                <label for="complexName">Complex Name:</label>
                                <input id="addComplex" type="text" class="complexName" placeholder="{{property.id}}">
                                <label for="unitNumber">Unit #</label>
                                <input id="addUnitNumber" type="text" class="unitNumber" placeholder="{{property.unit}}">
                            </div>
                            <div class="right-form">
                                <label for="rentAmt">Rent Amount:</label>
                                <input id="addRent" type="text" class="rentAmt" placeholder="{{property.rent}}">
                                 <label for="address#">Address:</label>
                                <input id="addAddress" type="text" class="address#" placeholder="{{property.address}}">
                            </div>
                            <button type="submit" class="form-button">Submit</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="form-button" data-dismiss="modal">Close</button>
                        
                    </div>
                </div>
            </div>
        </div>
        {{/each}}