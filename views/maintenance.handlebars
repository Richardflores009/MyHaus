    .nav-container, .nav-col {
        display: none;
    }
</style>
<!--nav col-->
<div class="col-sm-12 col-md-12 col-lg-2">
    <nav class="nav-container-ll">
        <h1 class="nav-title">MyHaus</h1>
        <a href="/home" class="nav-link">Dashboard</a>
        <a href="/post" class="nav-link">Maintenance Requests</a>
        <a href="/pet" class="nav-link">Pet Updates</a>
        <a href="/" id="landlordlogout">Log Out</a>
    </nav>
</div>

<div class="col-sm-12 col-md-12 col-lg-10 main-container">
    {{#each landlord as |landlord|}}
    <h1 class="dashboard-title">Hello,<br>{{landlord.first_name}} {{landlord.last_name}}!</h1>
    {{/each}}
    <div class="row justify-content-start">
        {{#each posts as | post |}}
        <div class="table-wrapper shadow col-5">
            <div class="table-title">Maintenance Request #{{@index}}</div>
            <div class="row table-info">
                <div class="col-6">
                    <form action="">                       
                        <fieldset disabled="disabled">                         
                            <div class="form-group">
                                <label>Title</label>
                                <input type="text"  class="form-control" placeholder="{{post.title}}">
                            </div>
                            <div class="form-group">
                                <label for="disabledTextInput">Description</label>
                                <input type="text" id="disabledTextInput" class="form-control" placeholder="{{post.description}}">
                            </div>
                        </fieldset>
                        <button type="button"  data-post-id="{{post.id}}" onclick="deletePost(this.getAttribute('data-post-id'));" id="delete-btn" class="form-button" data-dismiss="modal">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

